<div class="jumbotron">
	<div class="container">
		<div class="form">

      <h1>Log in</h1>
			
			<%= form_for(:session, url: login_path) do |f| %>
      	<%= f.text_field :name, :placeholder => "UserName" %>
      	<%= f.password_field :password, :placeholder => "Password" %>
      	<%= f.submit "Log in", class: "btn btn-lg btn-success" %>
      <% end %>
		
    </div>
	</div>
</div>