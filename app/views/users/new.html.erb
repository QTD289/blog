<div class="jumbotron">
  <div class="container">
    <div class="form">
      <h1>Sign Up</h1>
  
      <%= form_for(@user) do |f| %>
        <%= f.text_field :name, :placeholder => "UserName" %>
        <%= f.password_field :password, :placeholder => "Password" %>
        <%= f.submit "Create Account",  class: "btn btn-lg btn-success" %>
      <% end %>
    </div>
  </div>
</div>