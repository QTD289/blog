<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if current_user %>
    <%= render '/layouts/navbar_in' %>
  <% else %> 
    <%= render '/layouts/navbar_out' %>
  <% end %>


  <%= yield %>

</body>
</html>
